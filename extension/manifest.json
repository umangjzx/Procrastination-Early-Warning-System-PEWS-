{
  "manifest_version": 3,
  "name": "Procrastination Early Warning System",
  "version": "1.0",
  "description": "Predicts when you're about to get distracted based on browsing behavior.",
  "permissions": ["tabs", "scripting", "activeTab"],
  "host_permissions": ["http://127.0.0.1:8000/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "PEWS"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
